<h1>Products#new</h1>
<p>Find me in app/views/products/new.html.erb</p>

<%= form_for @product do |f| %>
  <%= f.label :name do %>
    商品名:<%= f.text_field :name %>
  <% end %>

  <%= f.fields_for :discs do |d| %>
    <%= render 'disc_fields', :f => d %>
  <% end %>
  <div class="links">
    <%# link_to_add_associationは標準で、親要素の上にformを追加するようになっている %>
    <%# ここではdivの上 %>
    <%= link_to_add_association 'add disc', f, :discs%>
  </div>
  <%= f.submit "Create" %>
<% end %>

